<%- include("partials/header") %>

    <div class="container py-5">
        <h1 class="text-center text-primary mb-4">Welcome</h1>
        <p class="text-center text-muted mb-5">
            Please login
        </p>

        <% if (!currentUser) { %>
            <!-- Usuario NO logueado: mostramos el formulario de login -->
            <div class="card mx-auto" style="max-width: 400px">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4 fw-bold">Login</h2>

                    <% if (typeof error !=="undefined" ) { %>
                        <p class="text-danger text-center">
                            <%= error %>
                        </p>
                        <% } %>

                            <form method="POST" action="/login">
                                <div class="mb-3">
                                    <label for="username" class="form-label">
                                        <i class="bi bi-person"></i> Username:
                                    </label>
                                    <input type="text" class="form-control" name="username" placeholder="Enter username"
                                        required />
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">
                                        <i class="bi bi-lock"></i> Password:
                                    </label>
                                    <input type="password" class="form-control" name="password"
                                        placeholder="Enter password" required />
                                </div>

                                <button type="submit" class="btn btn-primary w-100 fw-bold">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </button>
                            </form>

                            <div class="text-center mt-3">
                                <a href="/register" class="text-decoration-none">
                                    Don't have an account? Register
                                </a>
                            </div>
                </div>
            </div>
            <% } else { %>
                <!-- Usuario YA logueado: mostramos accesos rÃ¡pidos -->
                <div class="text-center">
                    <h2 class="text-primary mb-4">
                        <i class="bi bi-grid"></i> Go to:
                    </h2>
                    <ul class="list-group mx-auto" style="max-width: 400px">
                        <li class="list-group-item">
                            <a href="/menu" class="text-decoration-none">
                                <i class="bi bi-list-ul"></i> View Menu
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a href="/direcciones" class="text-decoration-none">
                                <i class="bi bi-geo-alt"></i> Addresses
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a href="/perfil" class="text-decoration-none">
                                <i class="bi bi-person-circle"></i> Profile
                            </a>
                        </li>
                        <li class="list-group-item">
                            <form action="/logout" method="POST">
                                <button type="submit" class="btn btn-link text-decoration-none p-0 m-0">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
                <% } %>
    </div>

    <%- include("partials/footer") %>